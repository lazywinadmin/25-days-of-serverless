{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Delay_until": {
                "inputs": {
                    "until": {
                        "timestamp": "@triggerBody()?['reminderDate']"
                    }
                },
                "runAfter": {},
                "type": "Wait"
            },
            "Send_Text_Message_(SMS)": {
                "inputs": {
                    "body": {
                        "body": "@triggerBody()?['message']",
                        "from": "+12053950657",
                        "to": "@triggerBody()?['phoneNumber']"
                    },
                    "host": {
                        "connection": {
                            "name": "@parameters('$connections')['twilio']['connectionId']"
                        }
                    },
                    "method": "post",
                    "path": "/Messages.json"
                },
                "runAfter": {
                    "Delay_until": [
                        "Succeeded"
                    ]
                },
                "type": "ApiConnection"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "parameters": {
            "$connections": {
                "defaultValue": {},
                "type": "Object"
            }
        },
        "triggers": {
            "manual": {
                "inputs": {
                    "schema": {
                        "properties": {
                            "message": {
                                "type": "string"
                            },
                            "phoneNumber": {
                                "type": "string"
                            },
                            "reminderDate": {
                                "type": "string"
                            }
                        },
                        "type": "object"
                    }
                },
                "kind": "Http",
                "type": "Request"
            }
        }
    },
    "parameters": {
        "$connections": {
            "value": {
                "twilio": {
                    "connectionId": "/subscriptions/2564654c-0209-4002-a8b4-aafc503f1c25/resourceGroups/25DaysOfServerless/providers/Microsoft.Web/connections/twilio",
                    "connectionName": "twilio",
                    "id": "/subscriptions/2564654c-0209-4002-a8b4-aafc503f1c25/providers/Microsoft.Web/locations/westus2/managedApis/twilio"
                }
            }
        }
    }
}
